<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightGrey"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.septiandrd.ilearn.HomeActivity"
    tools:showIn="@layout/app_bar_home">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/cardview1"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:background="@color/cardview_dark_background"
            app:cardCornerRadius="5dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_gravity="top">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/image6"
                    android:scaleType="centerCrop"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1. Pengenalan Pascal"
                    android:textColor="@android:color/white"
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="25sp"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="10dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_gravity="bottom">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pengertian algoritma dan pengenalan IDE Free Pascal'"
                    android:fontFamily="sans-serif-condensed"
                    android:textColor="@android:color/black"
                    android:layout_margin="10dp"/>

                <Button
                    android:id="@+id/btn_start_1"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Mulai"
                    android:textSize="14sp"
                    android:textColor="@color/colorPrimaryDarker"
                    android:fontFamily="sans-serif-condensed"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="8dp"/>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/cardview1"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:background="@color/cardview_dark_background"
            app:cardCornerRadius="5dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_gravity="top">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/image5"
                    android:scaleType="centerCrop"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Android Basics"
                    android:textColor="@android:color/white"
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="25sp"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="10dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_gravity="bottom">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your first step to become an Android Developer. Learn Java and start building amazing apps!"
                    android:fontFamily="sans-serif-condensed"
                    android:textColor="@android:color/black"
                    android:layout_margin="10dp"/>
                <Button
                    android:id="@+id/btn_start_2"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Start"
                    android:textSize="14sp"
                    android:textColor="@color/colorPrimaryDarker"
                    android:fontFamily="sans-serif-condensed"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="8dp"/>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

</ScrollView>
